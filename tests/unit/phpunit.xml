<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="bootstrap.php"
		 verbose="true"
		 convertDeprecationsToExceptions="true"
		 timeoutForSmallTests="900"
		 timeoutForMediumTests="900"
		 timeoutForLargeTests="900"
		>
	<testsuite name='Nextcloud - Full Text Search'>
		<directory suffix='Test.php'>.</directory>
	</testsuite>
	<!-- filters for code coverage -->
	<filter>
		<whitelist>
			<directory suffix=".php">../../../fulltextsearch</directory>
			<exclude>
				<directory suffix=".php">../../../fulltextsearch/l10n</directory>
				<directory suffix=".php">../../../fulltextsearch/lists</directory>
				<directory suffix=".php">../../../fulltextsearch/tests/unit</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<!-- and this is where your report will be written -->
		<log type="coverage-clover" target="./clover.xml"/>
	</logging>
</phpunit>
